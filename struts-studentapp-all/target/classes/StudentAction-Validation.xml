<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.dtd">
<validators>
    <field name="student.name">
        <field-validator type="requiredstring">
            <message>You must enter a name.</message>
        </field-validator>
    </field>
    <field name="age">
        <field-validator type="int">
            <message>Age should be between 20 to 70</message>
        </field-validator>
    </field>
    <field name="student.email">
        <field-validator type="requiredstring">
            <message>You must enter a Email.</message>
        </field-validator>
    </field>
     <field name="student.email">
        <field-validator type="email">
            <message>Email is not valid.</message>
        </field-validator>
    </field>
    <field name="student.stifound">
        <field-validator type="double">
            <message>You must enter a stipend Amount.</message>
        </field-validator>
    </field>
    <field name="student.course">
        <field-validator type="requiredstring">
            <message>You must enter a course.</message>
        </field-validator>
    </field>
    <field name="student.gender">
        <field-validator type="requiredstring">
            <message>You must enter a Gender.</message>
        </field-validator>
    </field>
    <field name="student.hobby">
        <field-validator type="requiredstring">
            <message>You must enter a Hobby.</message>
        </field-validator>
    </field>
</validators>
